<div class="col-lg-12 text-center v-center">
  <h1> All Albums </h1>
   <% if !@user.oauth_token.nil? %>
    <p class="lead"> <%= link_to "FacebooK Albums", fbalbums_path(@user.id), {:style=>'color:#DDCCEE;'} %></p>
    <br><br>
   <% end %>

  <div class="container">
    <div class="row">
      

       <% @album.each do |album| %>
       
       <div class="col-md-3">
        <div class="panel panel-default">
          <div class="panel-heading"><h3><%= album.name %><%= album.privacy %></h3></div>
          <div class="panel-body panelbodylead">
            <% if album.photos.count == 0 %>
			  			<%= link_to (image_tag "missing.png", :size => "100x100"), user_album_photos_path(@user.id, album.id) %>	
						<% else %>
			 				<%= link_to (image_tag album.photos.first.picture.url, :size => "100x100"), user_album_photos_path(@user.id, album.id) %>
						<% end %><br><br>
            <% if @user == current_user %>
						<%= link_to  "Remove", user_album_path(current_user.id,album.id), method: :delete, :confirm => "Are you sure..?" ,class: "btn btn-primary btn-danger" %>
            <% end %>
          </div>
        </div>
      </div> 
      
      <% end %>
    </div> 
   </div> 

</div>