<div class="col-lg-12 text-center v-center">
	
	<h1> All Photos of Album <%= @albumtitle %> </h1><hr>
	<h3 class="lead"> <p id="notice"><%= notice %> </p> </h3>
	<% if @user == current_user %>	
	<center>
	<table>
	
	<%= form_for( @album, method: :put, :html => { :multipart => true }) do |f| %>
		<%= f.fields_for :photos, @album.photos.build do |builder| %>
		<tr><td><%= builder.text_field :name , :placeholder => "Photo Name", :class => "edit_album_input input-lg" %></td></tr>
        <tr><td><%= builder.file_field :picture, :class => "edit_album_input input-lg" %></td></tr>
    	<% end %><br>
    	<tr><td><%= f.submit "Upload Pic", :class => "btn btn-default btn-lg" %></td></tr>
	<% end %>

	</table>
	</center>
   	<% end %>

  	<%= render :partial => "shared/list_photos" %>
  	
</div>
