<div class=" text-center v-center">
<h1>Sign up</h1>
</div>
<div class="col-lg-12 v-center">
<div class="input-group" style="width:340px;margin:0 auto;">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true}) do |f| %>
  <%= devise_error_messages! %>

 <p class="lead"> Username<br />
  <%= f.text_field :username, :autofocus => true, :class => "form-control input-lg" %></p>

<p class="lead">
<%= f.label :location %><br />
  <%= f.text_field :location, :class => "form-control input-lg" %></p>

<p class="lead">
  <%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control input-lg" %></p>

<p class="lead">
  <%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control input-lg" %></p>

<p class="lead">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, :class => "form-control input-lg" %>
</p>

<p class="lead">
  <%= f.label :Choose_Profile_Pic %><br />
  <%= f.file_field :avatar %>
</p>



  <div class="col-lg-12 text-center v-center">
    <%= f.submit "Sign Up", :class => "btn btn-lg btn-primary" %>
   
  </div>
  </div>

  </div>
<% end %>
</div>
<%= render "devise/shared/links" %>