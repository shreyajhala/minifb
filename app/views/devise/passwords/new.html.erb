<div class="col-lg-12 text-center v-center">
<h1>Forgot your password?</h1>
</div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
<div class="input-group" style="width:340px;margin:0 auto;">
<br><br><br>
<p class="lead">
  <%= f.label :email %><br />
  <%= f.email_field :email, :class => "form-control input-lg", :autofocus => true, :placeholder => "Enter your Email here" %>
</p>

<div class="col-lg-12 text-center v-center">
   	<%= f.submit "Send me reset password instructions", :class => "btn btn-lg btn-primary"  %></div>
</div>
 </div>

<% end %>

<%= render "devise/shared/links" %>
